<div class="course-banner" style="background-image: url('<%= image_path 'crossfit' %>');">
  <h3><%= @course.title %></h3>
  <%= render 'shared/stars' %>
</div>
<div class="blue-banner" style="background: linear-gradient(-225deg, rgba(36, 149, 191,0.6) 0%, rgba(47, 76, 155,0.6) 50%); height: 5vh;">
  <%= @date_words %>  <%= @course.start_time.strftime ("%l:%M %P") %>
  <div class="prices">
    <% cost_amount = @course.cost %>
    <% if cost_amount - cost_amount.to_i == 0 %>
      <%= cost_amount.to_i %> <i class="fa fa-euro"></i>
    <% else %>
      <%= @course.cost%> <i class="fa fa-euro"></i>
    <% end %>
  </div>
</div>

<%= render 'shared/course_descriptions_icons' %>
<%= render 'shared/reviews' %>

<div id="map" style="width: 100%; height: 200px;">

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
</div>
<!-- <h3><%#= @course.studio.name %></h3> -->
<%#= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=15&size=375x200&sensor=false&key=#{ENV['GOOGLE_API_SERVER_KEY']}&maptype=roadmap&markers=color:red|@course.studio.address"  %>

</div>

