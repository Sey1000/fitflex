<div class="container">
<%= cl_image_tag @studio.cld_id, class: "studio-image-show" %>
<div class="studio-description">
<h3><%= @studio.name %></h3>
<p><%= @studio.description %></p>
<% if current_user.studio == @studio && current_user.role == "owner" %>
  <h6>Hello, <%= current_user.first_name %> </h6>
<% else %>
  <h6>Our instructors</h6>
<% end %>
<div class="instructors">
  <% @users.each do |user| %>
    <div class="instr">
      <%= cl_image_tag user.cld_id, class: "avatar avatar-xs" %>
      <p><%= user.first_name %></p>
    </div>
  <% end %>
  </div>
</div>
<h6>Studio Address</h6>
<p class="studio-address"><%= @studio.address %></p>
<p class="studio-address"> <i class="fa fa-phone"></i><%= @studio.telephone %></p>



<%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=15&size=375x150&sensor=false&key=#{ENV['GOOGLE_API_SERVER_KEY']}&maptype=roadmap&markers=color:red|@studio.address" %>
</div>
