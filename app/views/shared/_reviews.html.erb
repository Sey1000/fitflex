<div class="course-reviews" style="background: linear-gradient(-225deg, rgba(36, 149, 191,0.6) 0%, rgba(47, 76, 155,0.6) 50%);height: 35vh;">
  <h3>Reviews</h3>
  <% @course.reviews.each do |review| %>
    <div class="review">
      <div class="user-review-image">
        <%= image_tag 'placeholder', class: 'avatar-xs' %>
      </div>
      <div class="review-content">
        <div class="user_name_review">
          <%= review.user.first_name %> <%= review.user.last_name %>
        </div>
        <div class="review_title">
          <%= review.title %>
        </div>
      </div>
      <div class="review-rating">
        <% review.rating.times do %>
          <i class="fa fa-star"></i>
        <% end %>
        <% (5- review.rating).times do %>
          <i class="fa fa-star-o"></i>
        <% end %>

      </div>
    </div>
  <% end %>
</div>
