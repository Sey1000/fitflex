

<div class="course-reviews" style="background: linear-gradient(-225deg, rgba(36, 149, 191,0.6) 0%, rgba(47, 76, 155,0.6) 50%);">
  <h3>Reviews</h3>
  <div class="swiper-container">
    <div class="swiper-wrapper">
      <% @course.reviews.each_slice(2) do |a|%>
      <div class="swiper-slide review">
        <% a.each_with_index do |review_a, i| %>
        <div class="inner-review">
          <div class="user-review-image">
            <%= image_tag 'placeholder', class: 'avatar-xs' %>
          </div>
          <div class="review-content">
            <div class="user_name_review">
              <%= review_a.user.first_name %> <%= review_a.user.last_name %>
            </div>
            <div class="review_title">
              <%= review_a.title %>
            </div>
          </div>
          <div class="review-rating">
            <% review_a.rating.times do %>
            <i class="fa fa-star"></i>
            <% end %>
            <% (5- review_a.rating).times do %>
            <i class="fa fa-star-o"></i>
            <% end %>
          </div>
        </div>

        <% end %>
      </div>
      <% end %>
    </div>
    <div class="swiper-arrows">
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<% content_for(:after_js) do %>
<script>
  var swiper = new Swiper('.swiper-container', {
    pagination: '.swiper-pagination',
    nextButton: '.swiper-button-next',
    prevButton: '.swiper-button-prev',
    slidesPerView: 1,
    paginationClickable: true,
    spaceBetween: 200,
    loop: true
  });
</script>
<% end %>

