
  <%= render 'users/avatar-component', user: @user %>

  <div class="profile-main-info">
  <% if @user.first_name %>
    <h1><%= @user.first_name %> <%= @user.last_name %> </h1>
    <% else %>
    <h1><%= @user.email %> </h1>
    <% end %>
  </div>


    <div class="profile-info">
      <div class="historical-bookings">
        <% upcoming_bookings = @user.bookings.select { |b| b.course.start_time - Time.now > 0 } %>
        <h2>Upcoming bookings (<%= upcoming_bookings.count %>) <i class="fa fa-chevron-down"></i></h2>
        <div class="row hidden">
          <% upcoming_bookings.each do |b| %>
            <%= render 'shared/booking-list', b: b, old: false %>
          <% end %>
        </div>
        </div>
      <div class="historical-bookings">
        <% past_bookings = @user.bookings.select { |b| b.course.start_time - Time.now < 0 } %>
        <h2>History (<%= past_bookings.count %>) <i class="fa fa-chevron-down"></i></h2>

        <div class="row hidden">
          <% past_bookings.each do |b| %>
            <%= render 'shared/booking-list', b: b, old: true %>
          <% end %>
        </div>
      </div>

    <%= link_to edit_user_registration_path, class: "setting-link" do %>
    <h2><i class="fa fa-cog" aria-hidden="true"></i> Profile settings</h2>
    <% end %>
  </div>

